@model SquadInternal.Models.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="card p-4 shadow" style="width:380px;">
        <h4 class="mb-3">Register</h4>

        @* ✅ Show server-side error (like DB error, duplicate email, etc.) *@
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        @* ✅ Show validation errors on top *@
        <div asp-validation-summary="All" class="text-danger mb-2"></div>

        <form asp-controller="Account" asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-2">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-2">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-primary w-100" type="submit">Create Account</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-controller="Account" asp-action="Login">Back to Login</a>
        </div>
    </div>
</div>

@* ✅ These scripts are required for client-side validation *@
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
