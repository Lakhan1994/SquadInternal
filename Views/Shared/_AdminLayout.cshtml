@using Microsoft.AspNetCore.Http
@{
    var roleId = Context.Session.GetInt32("RoleId");

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SquadInternal</title>

    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    @RenderSection("Scripts", required: false)
</head>

<body>

    <div class="admin-shell">

        <!-- LEFT SIDEBAR -->
        <aside class="sidebar">

            <div class="logo-box">
                <div style="text-align:center; width:100%; margin-bottom:30px;">
                    <img src="~/images/login-banner.png" style="width:210px;" />
                </div>
            </div>

            <ul class="nav flex-column pt-3">

                <!-- Dashboard -->
                <li class="nav-item mb-2">
                    <a class="nav-link text-white @(currentAction == "Dashboard" ? "active-menu" : "")"
                       asp-controller="Admin"
                       asp-action="Dashboard">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>

                <hr class="text-white opacity-25 my-3" />

                <!-- ADMIN MENU -->
                @if (roleId == 1)
                {
                    <li class="nav-item mb-1">
                        <a class="nav-link text-white @(currentAction == "Employees" ? "active-menu" : "")"
                           asp-controller="Admin"
                           asp-action="Employees">
                            <i class="bi bi-people me-2"></i> Employees
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link text-white @(currentAction == "LeaveManagement" ? "active-menu" : "")"
                           asp-controller="Admin"
                           asp-action="LeaveManagement">
                            <i class="bi bi-calendar-check me-2"></i> Leave Management
                        </a>
                    </li>

                    <li class="nav-item mb-1">
                        <a class="nav-link text-white @(currentAction == "Roles" ? "active-menu" : "")"
                           asp-controller="Admin"
                           asp-action="Roles">
                            <i class="bi bi-person-badge me-2"></i> Roles
                        </a>
                    </li>
                }

                <!-- EMPLOYEE MENU -->
                @if (roleId == 2)
                {
                    <li class="nav-item mb-1">
                        <a class="nav-link text-white @(currentAction == "Leave" ? "active-menu" : "")"
                           asp-controller="Employee"
                           asp-action="Leave">
                            <i class="bi bi-calendar-check me-2"></i> My Leaves
                        </a>
                    </li>
                }

                <!-- Holidays -->
                <li class="nav-item mb-3">
                    <a class="nav-link text-white @(currentAction == "Holidays" ? "active-menu" : "")"
                       asp-controller="Admin"
                       asp-action="Holidays">
                        <i class="bi bi-calendar-event me-2"></i> Holidays
                    </a>
                </li>

                <hr class="text-white opacity-25 my-3" />

                <!-- Logout -->
                <li class="nav-item">
                    <a class="nav-link text-white"
                       asp-controller="Account"
                       asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </a>
                </li>

            </ul>
        </aside>

        <!-- RIGHT CONTENT -->
        <main class="content">
            @RenderBody()
        </main>

    </div>

    <!-- JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        toastr.options = {
            closeButton: true,
            progressBar: true,
            positionClass: "toast-top-right",
            timeOut: "2500"
        };
    </script>

    @if (TempData["Success"] != null)
    {
        <script>
            toastr.success("@TempData["Success"]");
        </script>
    }

    @if (TempData["Error"] != null)
    {
        <script>
            toastr.error("@TempData["Error"]");
        </script>
    }

</body>
</html>