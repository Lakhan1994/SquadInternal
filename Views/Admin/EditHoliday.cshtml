@model SquadInternal.Models.SquadHoliday

@{
    ViewData["Title"] = "Edit Holiday";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-accent mb-3">
    <h3>✏ Edit Holiday</h3>
</div>

<div class="card shadow-sm p-4">

    <form asp-action="EditHoliday"
          asp-controller="Admin"
          method="post">

        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label class="form-label">Holiday Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Holiday Date</label>
            <input asp-for="HolidayDate"
                   type="date"
                   class="form-control"
                   value="@Model.HolidayDate.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="HolidayDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Type</label>
            <select asp-for="Type" class="form-select">
                <option value="">Select Type</option>
                <option>National</option>
                <option>Optional</option>
                <option>Festival</option>
                <option>Company</option>
            </select>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsHalfDay" class="form-check-input" />
            <label class="form-check-label">
                Half Day Holiday
            </label>
        </div>

        <button type="submit" class="btn btn-primary">
            💾 Save Changes
        </button>

        <a asp-action="Holidays"
           asp-controller="Admin"
           class="btn btn-secondary ms-2">
            Cancel
        </a>

    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
