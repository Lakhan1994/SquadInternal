@model List<SquadInternal.Models.Employee>
@using SquadInternal.Models

@{
    ViewData["Title"] = "Employees";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var roles = ViewBag.Roles as List<Role>;
    var currentYear = DateTime.Now.Year;
    var maxYear = 2026; // Fixed maximum year
    // Generate year list from 1900 to maxYear (2026)
    var yearList = new List<int>();
    for (int year = 1900; year <= maxYear; year++)
    {
        yearList.Add(year);
    }
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="page-accent d-flex justify-content-between align-items-center">
    <h3 class="m-0">Employees</h3>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addEmployeeModal">
        + Add
    </button>
</div>

<div class="card shadow-sm border-0 mt-3">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr> 
                    <th>Sr.No</th>

                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Reporting To</th>
                    <th>Added By</th>
                    <th style="width:120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int rowNumber = 1;
                }

                @foreach (var e in Model)
                {
                    <tr>
                        <!-- Show Row Number Instead of DB Id -->
                        <td>@rowNumber</td>

                        <td>@e.FirstName</td>
                        <td>@e.LastName</td>
                        <td>@(e.User?.Role?.Name ?? "-")</td>
                        <td>@(e.ReportingToUser?.Name ?? "-")</td>
                        <td>@(e.AddedByUser?.Name ?? "Admin")</td>

                        <td>
                            <button type="button"
                                    class="btn btn-sm btn-outline-primary me-1"
                                    title="Edit Employee"
                                    onclick="openEditEmployee(
                            '@e.Id',
                            '@Html.Raw(e.FirstName?.Replace("'", "\\'") ?? "")',
                            '@Html.Raw(e.LastName?.Replace("'", "\\'") ?? "")',
                            '@Html.Raw(e.User?.Email?.Replace("'", "\\'") ?? "")',
                            '@e.User?.RoleId',
                            '@e.ReportingToUserId',
                            '@e.DateOfBirth?.ToString("yyyy-MM-dd")',
                            '@e.DateOfJoining?.ToString("yyyy-MM-dd")',
                            '@e.Gender'
                        )">
                                <i class="bi bi-pencil"></i>
                            </button>

                            <form asp-action="DeleteEmployee" asp-controller="Admin" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@e.Id" />
                                <button type="submit"
                                        class="btn btn-sm btn-outline-danger"
                                        title="Delete Employee"
                                        onclick="return confirm('Are you sure you want to delete this employee?');">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            </form>
                        </td>
                    </tr>

                    rowNumber++;
                }
            </tbody>

        </table>
    </div>
</div>

<!-- ================= ADD EMPLOYEE MODAL ================= -->
<div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow">
            <div class="modal-header">
                <h5 class="modal-title">+ Add Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="addEmployeeForm"
                  asp-action="CreateEmployee"
                  asp-controller="Admin"
                  method="post">
                @Html.AntiForgeryToken()

                <div class="modal-body">
                    <ul class="nav nav-tabs mb-3" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-personal" type="button" role="tab">
                                Personal Details
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-education" type="button" role="tab">
                                Education Details
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <!-- PERSONAL -->
                        <div class="tab-pane fade show active" id="tab-personal" role="tabpanel">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">First Name</label>
                                    <input class="form-control" name="FirstName" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Last Name</label>
                                    <input class="form-control" name="LastName" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" name="Email" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Role</label>
                                    <select class="form-select" name="RoleId" required>
                                        <option value="">-- Select --</option>
                                        @if (roles != null)
                                        {
                                            @foreach (var r in roles)
                                            {
                                                <option value="@r.Id">@r.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Reporting To</label>
                                    <select name="ReportingToUserId" class="form-select">
                                        <option value="">-- Select Manager --</option>
                                        @if (ViewBag.ReportingManagers != null)
                                        {
                                            foreach (var manager in ViewBag.ReportingManagers as List<SquadInternal.Models.User>)
                                            {
                                                <option value="@manager.Id">@manager.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Date Of Birth</label>
                                    <input type="date" class="form-control" name="DateOfBirth" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Date Of Joining</label>
                                    <input type="date" class="form-control" name="DateOfJoining" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Gender</label>
                                    <select class="form-select" name="Gender">
                                        <option value="">-- Select --</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- EDUCATION -->
                        <div class="tab-pane fade" id="tab-education" role="tabpanel">
                            <div class="row g-3 mb-3">
                                <div class="col-md-4">
                                    <label class="form-label">Education Level</label>
                                    <select id="eduLevel" class="form-select">
                                        <option value="">-- Select --</option>
                                        <option value="SSC">SSC</option>
                                        <option value="HSC">HSC</option>
                                        <option value="Diploma">Diploma</option>
                                        <option value="Degree">Degree</option>
                                        <option value="Post Graduation">Post Graduation</option>
                                        <option value="PhD">PhD</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>

                                <div class="col-md-4 d-none" id="degreeDiv">
                                    <label class="form-label">Degree</label>
                                    <select id="degreeName" class="form-select">
                                        <option value="">-- Select --</option>
                                        <option value="BSc">BSc</option>
                                        <option value="BCom">BCom</option>
                                        <option value="BA">BA</option>
                                        <option value="BE">BE</option>
                                        <option value="BTech">BTech</option>
                                        <option value="BCA">BCA</option>
                                        <option value="MCA">MCA</option>
                                        <option value="MBA">MBA</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Institute</label>
                                    <input id="eduInstitute" class="form-control" />
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Year</label>
                                    <select id="eduYear" class="form-select">
                                        <option value="">-- Select Year --</option>
                                        @foreach (var year in yearList.OrderByDescending(y => y))
                                        {
                                            <option value="@year">@year</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-4">
                                    <label class="form-label">Percentage / CGPA</label>
                                    <div class="input-group">
                                        <input id="eduScore" class="form-control"
                                               placeholder="e.g., 8.5 or 85"
                                               oninput="updateScoreType(this)" />
                                        <span class="input-group-text" id="scoreTypeIndicator">?</span>
                                    </div>
                                    <small class="text-muted" id="scoreHelp">Enter score (auto-detected)</small>
                                </div>

                                <div class="col-md-4">
                                    <button type="button"
                                            class="btn btn-primary w-100 mt-4"
                                            onclick="addEducation()">
                                        + Add
                                    </button>
                                </div>
                            </div>

                            <table class="table table-sm table-bordered">
                                <thead class="table-light">
                                    <tr>
                                        <th>Level</th>
                                        <th>Degree</th>
                                        <th>Institute</th>
                                        <th>Year</th>
                                        <th>Score</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="eduTableBody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg me-1"></i> Cancel
                    </button>
                    <button type="button" class="btn btn-primary" onclick="forceSubmitEmployeeForm()">
                        <i class="bi bi-check-lg me-1"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

