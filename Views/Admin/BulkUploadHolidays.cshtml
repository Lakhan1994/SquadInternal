@{
    ViewData["Title"] = "Bulk Upload Holidays";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-accent d-flex justify-content-between align-items-center">
    <h3 class="m-0">📂 Bulk Upload Holidays</h3>
</div>

<div class="card shadow-sm border-0 p-4 mt-3">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>  
        </div>
    }

    <form asp-action="BulkUploadHolidays"
          asp-controller="Admin"
          method="post"
          enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label class="form-label fw-semibold">
                Select Excel File (.xlsx)
            </label>
            <input type="file"
                   name="file"
                   class="form-control"
                   accept=".xlsx,.xls"
                   required />
            <small class="text-muted">
                Only Excel files are allowed. Maximum size: 5MB.
            </small>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-upload me-1"></i> Upload
            </button>
        </div>

    </form>
</div>